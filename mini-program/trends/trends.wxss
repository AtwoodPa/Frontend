page {
    background-color: #fff;
}

.trends-container {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
}

.cards-container {
    position: absolute;
    width: 706.705rpx;
    height: 100%;
    z-index: 1;
    overflow: hidden;
    left: 50%;
    margin-left: -353.352rpx;
}

.card {
    position: absolute;
    /*1061/1126 * 750*/
    width: 706.705rpx;
    height: 400.310rpx;
    border-radius: 32rpx;
    transition: transform .5s linear;
}

.card:nth-child(1) {
    transform: translateY(385rpx);
}

.card:nth-child(2) {
    transform: translateY(485rpx);
}

.card:nth-child(3) {
    transform: translateY(585rpx);
}

.back-container {
    width: 40rpx;
    height: 40rpx;
    top: 0;
    bottom: 0;
    position: absolute;
    margin: auto;
    left: 20rpx;
    z-index: 1000;
}

.back-btn {
    position: fixed;
    top: 125rpx;
    transition: all 0.5s ease;
    z-index: 999;
    width: 15.985rpx;
    height: 29.3rpx;
    bottom: 0;
    left: 32rpx;
}

.info-container {
    position: relative;
    opacity: 0;
    padding: 427.5rpx 27.5rpx 27.5rpx 27.5rpx;
    transition: opacity .2s linear;
    border-radius: 32rpx;
}

.info-container.visible {
    opacity: 1;

    transition: opacity .2s linear;
}

.info-image {
    width: 100%;
    border-radius: 32rpx;
    z-index: 100;
}

.rich-content {
    font-size: 28rpx;
    line-height: 1.8;
    z-index: 999;
    height: 300rpx;
    min-height: 300rpx;
    background-color: #fff;
}

/* 动效 */
.back-btn.fade-in {
    opacity: 1;
    animation-name: fadeInDown;
    animation-duration: 2s;
    animation-fill-mode: none;
}

.fade-in-down {
    opacity: 1;
    animation-name: fadeInDown;
    animation-duration: 0.8s;
    animation-timing-function: ease;
}

.fade-out-down {
    opacity: 1;
    animation-name: fadeOutDown;
    animation-duration: 0.8s;
    animation-timing-function: ease;
    animation-fill-mode: none;
}





